#!/usr/bin/env ruby
require 'couth_ai'
require 'highline'
require 'pp'

cli = HighLine.new
consumer_key = ENV["COUTH_AI_KEY"] || cli.ask("Consumer key:    ")
consumer_secret = ENV["COUTH_AI_SECRET"] || cli.ask("Consumer secret: ") { |q| q.echo = false }
client = CouthAI::Yahoo::Client.new(consumer_key, consumer_secret)

begin
  fantasy_games = client.fantasy_games
rescue CouthAI::Yahoo::Client::AppTokenRequired
  app_token = cli.ask("Application token (leave blank if unknown): ")
  if app_token.empty?
    puts "Visit the following URL for the application token:"
    puts client.authorize_url
    app_token = cli.ask("Application token: ")
  end
  client.app_token = app_token
  retry
end

nfl = fantasy_games.find { |fg| fg.code == "nfl" && !fg.is_game_over }
p nfl
leagues = client.leagues(nfl)
league = leagues.first
p league

teams = client.teams(nfl, league)
team = teams.first
p team

roster = client.roster(team)
p roster
